# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-a-random-string
FLASK_ENV=production

# Database (Railway auto-fills this from PostgreSQL service)
DATABASE_URL=postgresql://postgres:xxx@postgres.railway.internal:5432/railway

# Redis (Railway auto-fills this from Redis service)
REDIS_URL=redis://default:xxx@redis.railway.internal:6379

# Microsoft Azure AD
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-encryption-key

# Voice Bot Configuration
RECALL_AI_TOKEN=your-recall-ai-token
DEEPGRAM_API_KEY=your-deepgram-api-key
VOICE_BOT_CLIENT_URL=https://your-netlify-app.netlify.app
VOICE_BOT_WEBSOCKET_URL=wss://your-websocket-server.com
VOICE_BOT_PORT=8000
VOICE_BOT_ENABLED=true
